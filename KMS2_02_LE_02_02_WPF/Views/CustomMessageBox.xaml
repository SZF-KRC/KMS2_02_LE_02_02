<Window x:Class="KMS2_02_LE_02_02_WPF.Views.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CustomMessageBox" Height="200" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Background="#E0F7FA">
    <Grid>
        <TextBlock x:Name="MessageText" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Margin="10" FontWeight="Bold"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button x:Name="SqlButton" Content="SQL Data" Width="100" Height="30" Margin="5" Click="SqlButton_Click" Style="{StaticResource MainButtonStyle}"/>
            <Button x:Name="XmlButton" Content="XML Data" Width="100" Height="30" Margin="5" Click="XmlButton_Click" Style="{StaticResource MainButtonStyle}"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="100" Height="30" Margin="5" Click="CancelButton_Click" Style="{StaticResource MainButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
